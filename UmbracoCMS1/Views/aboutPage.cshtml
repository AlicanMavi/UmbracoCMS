@using Umbraco.Cms.Core.Models
@using Umbraco.Cms.Core.Models.PublishedContent
@using Umbraco.Cms.Core.Models.Blocks
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    Layout = "_Layout";

    var mainImage = Model.Value<IPublishedContent>("mainImage");
    var mainImageUrl = mainImage?.Url() ?? "";

    var introHeading = Model.Value<string>("introHeading") ?? "";
    var introBody = Model.Value<string>("introBody") ?? "";

    var trustedTitle = Model.Value<string>("trustedTitle") ?? "";
    var trustedText = Model.Value<string>("trustedText") ?? "";
    var trustedImage = Model.Value<IPublishedContent>("trustedImage");
    var trustedImageUrl = trustedImage?.Url() ?? "";

    var reviewEyebrow = Model.Value<string>("reviewEyebrow") ?? "";
    var reviewTitle = Model.Value<string>("reviewTitle") ?? "";
    var reviewBody = Model.Value<string>("reviewBody") ?? "";
    var reviewStars = Model.Value<string>("reviewStars") ?? "";
    var reviewName = Model.Value<string>("reviewName") ?? "";
    var reviewCompany = Model.Value<string>("reviewCompany") ?? "";

    var pageSections = Model.Value<IEnumerable<BlockListItem>>("pageSections")
                      ?? Enumerable.Empty<BlockListItem>();

    var contactImage = Model.Value<IPublishedContent>("contactImage");
    var contactImageUrl = contactImage?.Url() ?? "";

    var contactHeading = Model.Value<string>("contactHeading") ?? "";
    var officeLocation = Model.Value<string>("officeLocation") ?? "";
    var phoneNumber = Model.Value<string>("phoneNumber") ?? "";
    var emailAddress = Model.Value<string>("emailAddress") ?? "";

    
}

<section class="about-hero-top">
    <div class="container">
        <h1>About Us</h1>
        <p class="breadcrumb">
            @{
                var root = Umbraco.ContentAtRoot().FirstOrDefault();
                var trail = new List<IPublishedContent>();

                if (root != null)
                {
                    var current = Model.Parent;

                    while (current != null && current.Id != root.Id)
                    {
                        trail.Add(current);
                        current = current.Parent;
                    }

                    trail.Reverse();
                }
            }

            @if (root != null)
            {
                <a href="@root.Url()">Home</a>
            }

            @foreach (var item in trail)
            {
                <span> / </span>
                <a href="@item.Url()">@item.Name</a>
            }

            <span> / </span>
            <span>@Model.Name</span>
        </p>

    </div>
</section>

<section class="about-main">
    <div class="container about-main-inner">
        <div class="about-main-image">
            @if (!string.IsNullOrEmpty(mainImageUrl))
            {
                <img src="@mainImageUrl" alt="About image" />
            }
        </div>

        <div class="about-main-text">
            <h2>@introHeading</h2>

            @if (!string.IsNullOrWhiteSpace(introBody))
            {
                <div class="about-main-body">
                    @Html.Raw(introBody)
                </div>
            }
        </div>
    </div>
</section>

<section class="about-trusted">
    <div class="container about-trusted-inner">
        <div class="about-trusted-text">
            @if (!string.IsNullOrWhiteSpace(reviewEyebrow))
            {
                <p class="trusted-eyebrow">@reviewEyebrow</p>
            }

            @if (!string.IsNullOrWhiteSpace(reviewTitle))
            {
                <h2 class="trusted-title">@reviewTitle</h2>
            }

            @if (!string.IsNullOrWhiteSpace(reviewBody))
            {
                <div class="trusted-body">
                    @Html.Raw(reviewBody)
                </div>
            }

            @if (!string.IsNullOrWhiteSpace(reviewStars))
            {
                <div class="trusted-stars">
                    @reviewStars
                </div>
            }

            @if (!string.IsNullOrWhiteSpace(reviewName) || !string.IsNullOrWhiteSpace(reviewCompany))
            {
                <div class="trusted-person">
                    @if (!string.IsNullOrWhiteSpace(reviewName))
                    {
                        <div class="trusted-name">@reviewName</div>
                    }

                    @if (!string.IsNullOrWhiteSpace(reviewCompany))
                    {
                        <div class="trusted-company">@reviewCompany</div>
                    }
                </div>
            }

        </div>

        <div class="about-trusted-image">
            @if (!string.IsNullOrEmpty(trustedImageUrl))
            {
                <img src="@trustedImageUrl" alt="Trusted clients" />
            }
        </div>
    </div>
</section>

</section>

@foreach (var block in pageSections)
{
    if (block.Content.ContentType.Alias == "teamSection")
    {
        var teamEyebrow = block.Content.Value<string>("teamEyebrow") ?? "";
        var teamTitle = block.Content.Value<string>("teamTitle") ?? "";
        var teamItems = block.Content.Value<IEnumerable<BlockListItem>>("teamItems")
                        ?? Enumerable.Empty<BlockListItem>();

        <section class="team-section">
            <div class="container">
                <p class="team-eyebrow">@teamEyebrow</p>
                <h2 class="team-title">@teamTitle</h2>

                <div class="team-grid">
                    @foreach (var member in teamItems)
                    {
                        var name = member.Content.Value<string>("memberName") ?? "";
                        var role = member.Content.Value<string>("memberRole") ?? "";
                        var photo = member.Content.Value<IPublishedContent>("memberPhoto");
                        var photoUrl = photo?.Url() ?? "";

                        <div class="team-card">
                            <div class="team-photo">
                                @if (!string.IsNullOrEmpty(photoUrl))
                                {
                                    <img src="@photoUrl" alt="@name" />
                                }
                            </div>

                            <div class="team-info">
                                <h3>@name</h3>
                                <p>@role</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>
    }
}

<section class="about-contact">
    <div class="container about-contact-inner">
        <div class="about-contact-left">
            <div class="contact-shape"></div>

            @if (!string.IsNullOrEmpty(contactImageUrl))
            {
                <img src="@contactImageUrl" alt="Contact person" />
            }
        </div>

        <div class="about-contact-right">
            <h2>@contactHeading</h2>

            <ul class="contact-list">
                @if (!string.IsNullOrWhiteSpace(officeLocation))
                {
                    <li>
                        <span class="icon">📍</span>
                        <div>
                            <strong>Office location</strong><br />
                            @officeLocation
                        </div>
                    </li>
                }

                @if (!string.IsNullOrWhiteSpace(phoneNumber))
                {
                    <li>
                        <span class="icon">📞</span>
                        <div>
                            <strong>Phone number</strong><br />
                            @phoneNumber
                        </div>
                    </li>
                }

                @if (!string.IsNullOrWhiteSpace(emailAddress))
                {
                    <li>
                        <span class="icon">✉</span>
                        <div>
                            <strong>E-mail address</strong><br />
                            @emailAddress
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</section>

