@using Umbraco.Cms.Core.Models.PublishedContent
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    var root = Model?.Root();
    var menuItems = root?.Children?.Where(x => x.IsVisible()) ?? Enumerable.Empty<IPublishedContent>();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@Model?.Name</title>

    <style>
        :root {
            --green-dark: #4f5f5b;
            --green-main: #3e5048;
            --gold: #e0ad4d;
            --text-dark: #333;
            --text-muted: #777;
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            color: var(--text-dark);
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }


        .topbar {
            background-color: var(--green-dark);
            color: #fff;
            font-size: 12px;
        }

        .topbar-inner {
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 32px;
        }

        .topbar-left {
            opacity: 0.95;
        }

            .topbar-left span + span {
                margin-left: 20px;
            }

        .topbar-right {
            display: flex;
            align-items: stretch;
        }

            .topbar-right span {
                display: inline-flex;
                align-items: center;
                justify-content: center;
                width: 34px;
                border-left: 1px solid rgba(255,255,255,0.15);
                cursor: pointer;
                font-size: 11px;
                text-transform: uppercase;
            }

                .topbar-right span:last-child {
                    border-right: 1px solid rgba(255,255,255,0.15);
                }

                .topbar-right span:hover {
                    background-color: rgba(0,0,0,0.12);
                }

        .site-header {
            background-color: #ffffff;
            border-bottom: 1px solid #e2e2e2;
        }

        .site-header-inner {
            height: 80px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .logo {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            text-decoration: none;
            color: var(--text-dark);
        }

        .logo-circle {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            border: 2px solid #4b6253;
        }

        .logo-text {
            font-weight: 700;
            font-size: 22px;
        }

        .main-nav {
            flex: 1;
            display: flex;
            justify-content: center;
        }

            .main-nav ul {
                list-style: none;
                margin: 0;
                padding: 0;
                display: flex;
                gap: 35px;
                font-size: 14px;
            }

            .main-nav li {
                position: relative;
            }

            .main-nav a {
                text-decoration: none;
                color: #555;
                padding-bottom: 4px;
                position: relative;
                text-transform: none;
            }

                .main-nav a::after {
                    content: "";
                    position: absolute;
                    left: 0;
                    bottom: 0;
                    width: 0;
                    height: 2px;
                    background-color: var(--gold);
                    transition: width 0.2s ease;
                }

                .main-nav a:hover {
                    color: var(--gold);
                }

                    .main-nav a:hover::after {
                        width: 100%;
                    }

            .main-nav li.active a {
                color: var(--gold);
                font-weight: 600;
            }

                .main-nav li.active a::after {
                    width: 100%;
                }

        .header-icons {
            display: flex;
            align-items: center;
            gap: 15px;
            font-size: 16px;
            color: #555;
        }

            .header-icons span {
                cursor: pointer;
            }

                .header-icons span:hover {
                    color: var(--gold);
                }

        main {
            background-color: #f5f5f5;
        }

        footer {
            margin-top: 80px;
            padding: 40px 0;
            background: #222;
            color: #ccc;
            font-size: 13px;
        }

        .footer-inner {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="topbar">
        <div class="container topbar-inner">
            <div class="topbar-left">
                <span>Klarabergsviadukten 90, 111 64 Stockholm</span>
            </div>
            <div class="topbar-right">
                <span>f</span>
                <span>tw</span>
                <span>in</span>
            </div>
        </div>
    </div>

    <header class="site-header">
        <div class="container site-header-inner">
            <a href="@root?.Url()" class="logo">
                <div class="logo-circle"></div>
                <div class="logo-text">Onatrix</div>
            </a>

            <nav class="main-nav">
                <ul>
                    <li class="@(Model.Id == root?.Id ? "active" : "")">
                        <a href="@root?.Url()">Home</a>
                    </li>

                    @foreach (var item in menuItems)
                    {
                        <li class="@(item.Id == Model.Id ? "active" : "")">
                            <a href="@item.Url()">@item.Name</a>
                        </li>
                    }
                </ul>
            </nav>


            <div class="header-icons">
                <span>🔍</span>
            </div>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="site-footer">
        <div class="container footer-inner">
            <p>© Onatrix. All Rights Reserved. Credits to Themesflat</p>
        </div>
    </footer>
</body>
</html>
