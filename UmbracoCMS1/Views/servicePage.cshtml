@using Umbraco.Cms.Core.Models
@using Umbraco.Cms.Core.Models.PublishedContent
@using Umbraco.Cms.Core.Models.Blocks
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    Layout = "_Layout";

    var pageSections = Model.Value<IEnumerable<BlockListItem>>("pageSections")
                      ?? Enumerable.Empty<BlockListItem>();

    var contactImage = Model.Value<IPublishedContent>("contactImage");
    var contactImageUrl = contactImage?.Url() ?? "";

    var contactHeading = Model.Value<string>("contactHeading") ?? "";
    var officeLocation = Model.Value<string>("officeLocation") ?? "";
    var phoneNumber = Model.Value<string>("phoneNumber") ?? "";
    var emailAddress = Model.Value<string>("emailAddress") ?? "";
}

<section class="services-hero-top">
    <div class="container">
        <h1>Our Services</h1>
        <p class="breadcrumb">Home / <span>Services</span></p>
    </div>
</section>

@* SERVICES GRID FRÅN PAGE SECTIONS *@
@foreach (var block in pageSections)
{
    if (block.Content.ContentType.Alias == "servicesGridSection")
    {
        var sectionTitle = block.Content.Value<string>("sectionTitle") ?? "";
        var services = block.Content.Value<IEnumerable<BlockListItem>>("services")
                       ?? Enumerable.Empty<BlockListItem>();

        <section class="services-section services-page">
            <div class="container">
                <p class="services-eyebrow">OUR SERVICES</p>
                <h2 class="services-title">@sectionTitle</h2>

                <div class="services-grid">
                    @foreach (var service in services)
                    {
                        var title = service.Content.Value<string>("serviceTitle") ?? "";
                        var desc = service.Content.Value<string>("serviceDescription") ?? "";
                        var image = service.Content.Value<IPublishedContent>("serviceImage");

                        <article class="service-card">
                            <h3 class="service-heading">@title</h3>

                            @if (image != null)
                            {
                                <img class="service-image" src="@image.Url()" alt="@title" />
                            }

                            <p class="service-desc">@desc</p>
                        </article>
                    }
                </div>
            </div>
        </section>
    }
}

<section class="about-contact">
    <div class="container about-contact-inner">
        <div class="about-contact-left">
            <div class="contact-shape"></div>

            @if (!string.IsNullOrEmpty(contactImageUrl))
            {
                <img src="@contactImageUrl" alt="Contact person" />
            }
        </div>

        <div class="about-contact-right">
            <h2>@contactHeading</h2>

            <ul class="contact-list">
                @if (!string.IsNullOrWhiteSpace(officeLocation))
                {
                    <li>
                        <span class="icon">📍</span>
                        <div>
                            <strong>Office location</strong><br />
                            @officeLocation
                        </div>
                    </li>
                }

                @if (!string.IsNullOrWhiteSpace(phoneNumber))
                {
                    <li>
                        <span class="icon">📞</span>
                        <div>
                            <strong>Phone number</strong><br />
                            @phoneNumber
                        </div>
                    </li>
                }

                @if (!string.IsNullOrWhiteSpace(emailAddress))
                {
                    <li>
                        <span class="icon">✉</span>
                        <div>
                            <strong>E-mail address</strong><br />
                            @emailAddress
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</section>


<style>
    .services-hero-top {
        background-color: #f7f7f7;
        padding: 60px 0 50px;
        text-align: center;
        border-bottom: 1px solid #e5e5e5;
    }

        .services-hero-top h1 {
            margin: 0 0 8px;
            font-size: 28px;
            font-weight: 700;
            color: #424a46;
        }

    .breadcrumb {
        margin: 0;
        font-size: 12px;
        color: #999;
    }

        .breadcrumb span {
            color: #424a46;
        }

    .services-section.services-page {
        background-color: #ffffff;
        padding: 80px 0 100px;
        text-align: center;
    }

    .services-eyebrow {
        margin: 0;
        text-transform: uppercase;
        color: #a7a7a7;
        font-size: 12px;
        letter-spacing: 2px;
    }

    .services-title {
        margin: 10px 0 50px;
        font-size: 28px;
        font-weight: 800;
        color: #3e5048;
    }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 28px;
    }

    .service-card {
        background: #fff;
        border-radius: 6px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.08);
        text-align: left;
        overflow: hidden;
    }

    .service-heading {
        margin: 0;
        padding: 16px 18px 12px;
        font-size: 17px;
        font-weight: 700;
        color: #2e2e2e;
    }

    .service-image {
        width: 100%;
        height: 185px;
        object-fit: cover;
        display: block;
    }

    .service-desc {
        margin: 0;
        padding: 14px 18px 18px;
        font-size: 14px;
        line-height: 1.6;
        color: #6a6a6a;
        background: #fafafa;
        border-top: 1px solid #eee;
    }

    .service-card:hover {
        transform: translateY(-3px);
        transition: transform 0.2s ease;
    }

    @@media (max-width: 980px) {
        .services-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (max-width: 640px) {
        .services-grid {
            grid-template-columns: 1fr;
        }
    }

    .about-contact {
        background-color: #f5f5f5;
        padding: 80px 0 90px;
    }

    .about-contact-inner {
        display: flex;
        align-items: center;
        gap: 80px;
    }

    .about-contact-left {
        flex: 0 0 45%;
        position: relative;
        min-height: 320px;
    }

    .contact-shape {
        position: absolute;
        bottom: 0;
        left: 18%;
        width: 70%;
        height: 60%;
        background: #4b6253;
        transform: skewX(-18deg);
    }

    .about-contact-left img {
        position: relative;
        z-index: 2;
        max-width: 100%;
        height: 360px;
        object-fit: cover;
        display: block;
    }

    .about-contact-right {
        flex: 0 0 45%;
    }

        .about-contact-right h2 {
            font-size: 30px;
            font-weight: 800;
            line-height: 1.3;
            color: #3e5048;
            margin: 0 0 28px;
        }

    .contact-list {
        list-style: none;
        margin: 0;
        padding: 0;
    }

        .contact-list li {
            display: flex;
            align-items: flex-start;
            gap: 14px;
            margin-bottom: 20px;
        }

        .contact-list .icon {
            font-size: 16px;
            line-height: 1;
            color: #c4a46b;
            margin-top: 4px;
        }

        .contact-list strong {
            display: block;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #a0a0a0;
            margin-bottom: 4px;
        }

        .contact-list li div {
            font-size: 13px;
            color: #555;
        }

        .contact-list li:last-child div {
            font-style: italic;
        }


    @@media (max-width: 900px) {
        .about-contact-inner {
            flex-direction: column;
            gap: 40px;
        }

        .about-contact-left,
        .about-contact-right {
            flex: 1 1 100%;
        }

        .about-contact-right {
            text-align: left;
        }
    }
</style>
